---
import ButtonPrimaty from "@/components/common/button_primaty.astro";
import ButtonSquare from "@/components/common/button_square.astro";
import IconCoin from "@/components/icons/icon_coin.astro";
import IconMoney from "@/components/icons/icon_money.astro";
import IconQuestion from "@/components/icons/icon_question.astro";
import IconTruck from "@/components/icons/icon_truck.astro";

const data = [
    {
        text: "Pay bill",
        icon: IconMoney,
        description: "Pay your bill online, by phone, or by mail. We also offer budget billing and auto-pay options."
    },
    {
        text: "Services & Rebates",
        icon: IconCoin,
        description: "Services and rebates to help you save on your energy bill. From energy efficiency programs to renewable energy options, we have solutions for every customer."
    },
    {
        text: "Moving?",
        icon: IconTruck,
        description: "Moving? We can help you transfer your service to your new address. Just give us a call or visit our website to get started."
    },
    {
        text: "Report Outage",
        icon: IconQuestion,
        description: "Report an outage or check the status of an existing outage. Our team is available 24/7 to assist you with any issues you may have."
    },
]

const nameButton = "Explore Options";
const descriptionButton = "If you need support, we have programs that can help - like our new Payment Assistance Bundle.";
---

<section class="bg-main text-white relative">
    <div class="px-5 lg:px-0 pt-[120px] pb-[280px] lg:pb-[220px] relative overflow-hidden">
        <div class="size-screen col gap-6 text-center lg:text-start z-10 relative">
            <h1 class="title into-bottom">
                Electric Supply Prices are<br> 
                Increasing
            </h1>
            <p class="paragraph into-bottom-2">
                Learn what this means for you and how you can manage energy costs <br class="br-hidden"> 
            </p>
            <ButtonPrimaty
                onclick={`showModal('${nameButton}', '${descriptionButton}')`}
                text={nameButton} 
                className="mx-auto lg:mx-0 into-bottom-3" 
            />
        </div>
        
        <div class="size-screen lg:relative">
            <img 
                src="/images/wind_turbines.png" 
                alt="Wind Turbines"
                class="absolute -bottom-28 lg:top-1/2 lg:-translate-y-1/2 right-0 rotate-[45deg] p-6 border-2 border-[#02AFF0] into-right-2" 
                loading="eager"
            >
        </div>
    </div>

    <div class="w-full px-5 lg:px-0 lg:w-auto grid grid-cols-2 lg:flex flex-row gap-2.5 absolute-center-x -bottom-[200px] lg:-bottom-32 into-left">
        {data.map(({ text, icon: Icon, description }) => (
            <ButtonSquare onclick={`showModal('${text}', '${description}')`} text={text} className="">
                <Icon slot="icon" class="size-[30px] stroke-black" />
            </ButtonSquare>
        ))}
    </div>
</section>