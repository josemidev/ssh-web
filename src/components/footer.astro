---
import IconArrowRotate from "./icons/icon_arrow_rotate.astro";
import IconPpl from "./icons/icon_ppl.astro";
---

<footer class="bg-[#00148C] text-white w-full pt-[60px] lg:pt-[128px] pb-5">
    <div class="size-screen flex flex-col lg:flex-row lg:justify-between mb-[70px] lg:mb-[120px]">
        <div class="col gap-3 lg:gap-[26px] mb-11 lg:mb-0">
            <IconPpl class="mb-2" />

            <p class="text-xl">
                Lorem ipsum dolor sit amet, <br>
                consectetur adipiscing elit. 
            </p>

            <a class="w-fit rounded-xl row gap-1.5 items-center bg-white hover:bg-slate-100 text-[#0371A8] py-4 px-5 cursor-pointer">
                <span class="text-xl font-medium">Start Now</span>
                <IconArrowRotate class="fill-[#0371A8] size-6" />
            </a>
        </div>

        <div class="flex flex-col lg:flex-row gap-[36px] lg:gap-10">
            <div class="col gap-3 lg:gap-4">
                <h3>Contact</h3>
                <a class="row gap-2.5 hover:underline cursor-pointer">
                    <span>+1 234 567-789</span>
                    <IconArrowRotate class="size-6 fill-white" />
                </a>
                <a href="mailto:email@company.name" class="row gap-2.5 hover:underline cursor-pointer">
                    <span>email@company.name</span>
                    <IconArrowRotate class="size-6 fill-white" />
                </a>
            </div>

            <div class="col gap-3 lg:gap-4">
                <h3>Legal Information</h3>
                <a class="text-sm hover:underline cursor-pointer">
                    Privacy Policy
                </a>
                <a class="text-sm hover:underline cursor-pointer">
                    Terms & Conditions
                </a>
                <a class="text-sm hover:underline cursor-pointer">
                    Cookies Policy
                </a>
            </div>
        </div>
    </div>

    <p class="lg:text-center px-5 lg:px-0">
        Copyright @ 2025 Company Name. All rights reserved.
    </p>
</footer>